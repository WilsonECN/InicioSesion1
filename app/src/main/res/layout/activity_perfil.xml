<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iniciosesion.wilso.iniciosesion.PerfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/fondo"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <Button
                android:id="@+id/btSalir"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/quitarcirculo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@color/common_action_bar_splitter"
                    android:gravity="center"
                    android:padding="15sp"
                    android:text="txNombre"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ImagenV"
                            android:layout_width="match_parent"
                            android:layout_height="171dp"
                            android:padding="10sp"
                            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_disabled" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Marca"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txMarca"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="10sp"
                            android:text="txMarca"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="CaracterÃ­sticas"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txcaracteristicas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="10sp"
                            android:text="txcaracteristicas"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text="En existencias"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txExistencias"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text="txExistencias"
                            android:textColor="@color/common_google_signin_btn_text_dark_focused"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="Precio Unitario"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="Precio Mayorista"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text="precio Distribuidor"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="70dp"
                            android:layout_weight="0">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txU"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0"
                                    android:gravity="center_horizontal"
                                    android:padding="10sp"
                                    android:text="txU"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txM"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0"
                                    android:gravity="center_horizontal"
                                    android:padding="10sp"
                                    android:text="txM"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txD"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0"
                                    android:gravity="center_horizontal"
                                    android:padding="10sp"
                                    android:text="txD"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</LinearLayout>
